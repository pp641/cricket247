<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('inc/meta_head.ejs') %>
</head>

<body>

    <!--Wrapper Start-->
    <div class="wrapper color-option-2">
    <%-include('inc/header.ejs') %>
       

    <!--News Gallery Start-->
        <div class="news-section-wrapper news-gallery no-margin">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="section-title">Manage Admin</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                       

                       <div class="col-md-12">
                        <div class="schedule-tab">
                            

                            <!-- Nav tabs -->
                            <ul class="nav" role="tablist">
                                <li role="presentation" class="active"><a href="#add" aria-controls="tab1" role="tab" data-toggle="tab" aria-expanded="true">Create Event</a></li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="add">
                                    <!-- <h6>Add</h6> -->

                                <form method="post" action="/admin_panel/edit_manage_admin/<%=edUserData._id%>">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="">Admin Name</label>
                                                <input name="admin_name" value="<%=edUserData.admin_name%>" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="">Admin Username</label>
                                                <input name="admin_user" value="<%=edUserData.username%>" type="text" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="">Admin Type</label>
                                                <select name="admin_type" class="form-control" id="">
                                                    <option value="">--Select--</option>
                                                    <option <% if(edUserData.admin_type == 1){ %> <%="selected"%> <% } %> value="1">Super Admin</option>
                                                    <option <% if(edUserData.admin_type == 0){ %> <%="selected"%> <% } %> value="0">Mini Admin</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="">Admin Status</label>
                                                <select name="admin_status" class="form-control" id="">
                                                    <option value="">--Select--</option>
                                                    <option <% if(edUserData.admin_status == 0){ %> <%="selected"%> <% } %> value="0">Active</option>
                                                    <option <% if(edUserData.admin_status == 1){ %> <%="selected"%> <% } %> value="1">Block</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    
                                      
                                      <button type="submit" class="btn btn-warning">Submit</button>

                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                       
                    </div>     
                         
                       




                    </div>
                </div>
                <!-- <div class="row text-center">  </div> -->
            </div>
        </div>
        <!--News Gallery End-->
       
    
        <%-include('inc/footer.ejs') %>
        </body>
</html>