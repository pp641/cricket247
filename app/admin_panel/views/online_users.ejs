        </div>
        <!--News Gallery End-->
       
    
        <%-include('inc/footer.ejs') %>
        <script>
        function getLoggedInUser(){
            $.get('/admin_panel/api/getloginUser',function(data){
                let jobj = JSON.parse(JSON.stringify(data))
                let html ="";
                jobj.forEach(row => {
                    html += "<tr>"
                    +"<td>"+row.username+"</td>"
                    +"</tr>";
                });
                $("#userList").html(html);
            })
        }
        setInterval(function(){
            getLoggedInUser();
        },1000)
        </script>
        </body>
